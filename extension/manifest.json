{
  "manifest_version": 3,
  "name": "Kalshi Pulse",
  "version": "0.1.0",
  "description": "AI-powered analysis for Kalshi prediction markets",
  "permissions": ["storage"],
  "host_permissions": [
    "https://kalshi.com/*", 
    "http://localhost:3000/*",
    "https://*.ngrok-free.dev/*",
    "https://*.ngrok.io/*"
  ],
  "content_scripts": [{
    "matches": [
      "https://kalshi.com/markets/*",
      "https://kalshi.com/sports/*"
    ],
    "js": ["content.js"],
    "css": ["styles.css"],
    "run_at": "document_idle"
  }],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}

